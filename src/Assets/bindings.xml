<?xml version="1.0" encoding="utf-8"?>
<!-- Description des bindings de touches clavier -->
<!--
	STRUCTURE :
		<bind action joueurAssociÃ©>
			<key nomTouche></key>
		</bind>
-->
<!-- Codes:
fleches : UP, DOWN, LEFT, RIGHT
Lettres : toutes
Espace : SPACE
Echap : ESCAPE
-->
<bindings>

<!-- Bindings joueur 1 -->
	<bind type="MOVE_LEFT" player ="1">
		<key name="LEFT"></key>
	</bind>
	
	<bind type="MOVE_RIGHT" player ="1">
		<key name="RIGHT"></key>
	</bind>
	
	<bind type="JUMP" player ="1">
		<key name="NUMPAD0"></key>
	</bind>
	
	<bind type="ATTACK" player ="1">
		<key name="NUMPAD1"></key>
	</bind>
	
	<bind type="MOVE_UP" player ="1">
		<key name="UP"></key>
	</bind>
	
	<bind type="MOVE_DOWN" player ="1">
		<key name="DOWN"></key>
	</bind>
	
	<bind type="QUIT" player ="1">
		<key name="DELETE"></key>
	</bind>
	
<!-- Bindings joueur 2 -->

	<bind type="MOVE_LEFT" player ="2">
		<key name="Q"></key>
	</bind>
	
	<bind type="MOVE_RIGHT" player ="2">
		<key name="D"></key>
	</bind>
		
	<bind type="MOVE_UP" player ="2">
		<key name="Z"></key>
	</bind>
	
	<bind type="MOVE_DOWN" player ="2">
		<key name="S"></key>
	</bind>
	
	<bind type="JUMP" player ="2">
		<key name="SPACE"></key>
	</bind>
	
	<bind type="ATTACK" player ="2">
		<key name="R"></key>
	</bind>
	
	<bind type="QUIT" player ="2">
		<key name="ESCAPE"></key>
	</bind>

</bindings>